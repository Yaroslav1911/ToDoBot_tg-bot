<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="todo-bot">
        <description>Hibernate EntityManager Demo</description>
        <class>edu.todobot.database.entities.UsersEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="com.postgresql.jdbc.driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/todobot_database"/>
            <property name="javax.persistence.jdbc.user" value="secretUser"/>
            <property name="javax.persistence.jdbc.password" value="secretPassword"/>
        </properties>
    </persistence-unit>
</persistence>